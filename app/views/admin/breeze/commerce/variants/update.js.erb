<% if @variant.errors.empty? %>
  $('#<%= "variant_#{@variant.id}" %>').replaceWith('<%= escape_javascript render(:partial => "/admin/breeze/commerce/products/variant", :object => @variant) %>');
  $('#variant-details').dialog('close');
<% else %>
  $('#variant-details').html('<%= escape_javascript render(:file => "/admin/breeze/commerce/variants/edit") %>');
<% end %>
