<% content_for :title, "Customers" %>
<% pane_layout do |panes| %>
  <% panes.inner do %>
    <%= scrollable_layout do %>
      <h1>Customers <%= link_to "New customer", new_admin_store_customer_path, :class => "large new green customer button" %></h1>
      <div class="filters">
        <div class="states">
          <%= link_to "All (#{store.products.count})", admin_store_products_path %> |
        </div>
      </div>
      <%= render :partial => "customers", :locals => { :customers => @customers.paginate(:page => params[:page], :per_page => 10) } %>
    <% end %>
  <% end %>
<% end %>

<%= content_for :left do %>
  <% render :partial => "/admin/breeze/commerce/commerce/left" %>
<% end %>
