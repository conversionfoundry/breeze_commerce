<div class="breeze-commerce-product" data-product-id="<%= @product.id %>">
  <h2><%= @product.title %></h2>
  <ul class="products">
    <%= render :partial => "/partials/commerce/properties", locals: { product: @product } %>
  </ul>
  <div class="variants">
    <%= render :partial => "/partials/commerce/variants", locals: { product: @product, variants: [] } %>
  </div>
</div>