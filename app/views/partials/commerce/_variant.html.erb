<%= content_tag :tr, :class => :variant, :id => "variant_#{variant.id}", :"data-id" => variant.id do %>
  <td class="name">
    <%= variant.name %>
  </td>
  <td class="price">
    <%= variant.display_price %>
  </td>
  <td class="available">
    <%= variant.available %>
  </td>
  <td class="actions">
    <p class="variant-actions">
      <%# submit_tag "Add to cart", :class => "" %>
      <%= button_to "Add to cart", breeze.populate_orders_path(:variant_id => variant.id) %>
      
    </p>
  </td>
<% end %>
