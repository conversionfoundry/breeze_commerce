- content_for :head do
  %title Order Confirmation
  %link{:href => "http://fonts.googleapis.com/css?family=Just+Another+Hand", :rel => "stylesheet", :type => "text/css"}

  
.row
  .span12.order_confirmation
    #order-result
      .thank_you
        Thank you for shopping with us.
      .order_status
        %h3
          = @order.billing_status.name
        = @order.billing_status.description
      
    #order-customer
      = render :partial => "breeze/commerce/customers/customer_show", :locals => {:customer => @order.customer}
      - if store.allow_returning_customer_login
        .customer-new
          = render :partial => "breeze/commerce/customers/customer_new", :locals => {:customer => @order.customer}

    .order.clearfix
      .order-identification
        %h2 Your Order
        .order-date
          %span= @order.transaction_completed_at.strftime "%A %d %B %Y"
        .order-number
          %span Order Number:
          %span= @order.order_number
      .order-line_items.clearfix
        = render :partial => "breeze/commerce/line_items/line_items_show", :locals => { line_items: @order.line_items.unarchived }
        = render :partial => "breeze/commerce/coupons/coupon_show", locals: { order: @order }
        = render :partial => "breeze/commerce/shipping_methods/shipping_methods_show", locals: { order: @order }
        = render :partial => "breeze/commerce/orders/total", locals: { order: @order }
        #order-customer_comment
          = @order.comment
      .order-billing
        .order-billing_address.address
          %h3 Billing Address
          - if @order.billing_address
            = render :partial => "breeze/admin/commerce/addresses/address", :object => @order.billing_address
          - else
            Enter a billing address
      .order-shipping
        .order-shipping_address.address
          %h3 Shipping Address
          - if @order.shipping_address
            = render :partial => "breeze/admin/commerce/addresses/address", :object => @order.shipping_address
          - else
            Enter a shipping address
      .order-payments
        = render :partial => "breeze/commerce/payments/payments", :object => @order.payments


    .row
      .span12
        .form-actions
          .btn-group
            = link_to store.home_page.permalink, :class => "btn btn-primary", :id => "continue-shopping" do
              %span.title Continue Shopping