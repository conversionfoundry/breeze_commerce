- if customer
  = link_to "Delete Profile", breeze.customer_path(@customer, format: :js), method: :delete, confirm: "Are you sure?", class: "btn btn-mini btn-customer-delete pull-right"
  %p.customer-name
    %span.name
      = customer.name
  %ul.customer-contact
    %li.phone
      = customer.phone
    %li.email
      = customer.email
    %li.billing_address
      = html_address(customer.billing_address, false) if customer.billing_address
  .form-actions
    .btn-group
    =# link_to 'Sign Out', breeze.destroy_commerce_customer_session_path, class: 'btn'
    = link_to "Edit Profile", breeze.edit_customer_path(customer), class: "btn btn-customer-edit pull-right", id: "btn-edit_customer_profile"
- else
  %p.customer-name
    %span.name
      = @order.billing_address.name
  %ul.customer-contact
    %li.phone
      = @order.billing_address.phone
    %li.email
      = @order.email

