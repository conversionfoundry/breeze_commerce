<% if @category.errors.empty? %>
  closeContextualNew();
  $('<%= escape_javascript render(:partial => "/breeze/commerce/categories/category", :object => @category) %>').appendTo('.categories tbody').effect("highlight", { color: "#ffffc0" }, 3000);
<% else %>
  $('.new-context').html('<%= escape_javascript render(:file => "/breeze/commerce/categories/new") %>');
<% end %>
