<% if @category.errors.empty? %>
  $('.categories tbody').append('<%= escape_javascript render(:partial => "/breeze/commerce/categories/category", :object => @category) %>');
  $('#category-details').dialog('close');
   // $('#categories').sortable('refresh');
<% else %>
  $('#category-details').html('<%= escape_javascript render(:file => "/breeze/commerce/categories/new") %>');
<% end %>
