<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
<%= stylesheet_link_tag "/breeze/stylesheets/commerce" %>
<div id="cart-container">
  <div id="cart-header">
<h1>Shopping Cart</h1>

  <div class="buttons">
    <%= link_to '/products', :class => "multi-line-button" do %>
      <span class="title">Continue Shopping</span>
      <span class="subtitle">your information will be saved</span>
    <% end %>
      <%= link_to checkout_path, :class => "multi-line-button green" do %>
        <span class="title">Checkout NOW!</span>  
      <% end %> 
    </div>
  </div>
      <table id="cart" class="rounded order">
      <thead>
        <tr>
          <th colspan="3">Item</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>TOTAL</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if @order.line_items.empty? %>

        <% else %>
        <% @order.line_items.each do |line_item| %>
          <%= form_for line_item, :url => order_line_item_path(@order, line_item), :method => :put, :remote => true do |f| %>
            <tr id="<%= line_item.id %>">
          <td></td>
          <td>[Image here]</td>
          <td><%= line_item.product.name %></td>
          <td></td>
          <td class="price">$250.00 <span class="currency">NZD</span></td>
          <td><%= f.text_field :quantity %> &nbsp; <%= f.submit "Apply" %></td>    
          <td class="total"><%= number_to_currency line_item.amount %> <span class="currency">NZD</span></td>
          <td>
            <%= link_to 'Remove', order_line_item_path(@order, line_item), :method => :delete, :remote=> true, :class => "remove" %>
          </td>
          <td></td>  
        </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
  <%= render :partial => "breeze/commerce/line_items/totals" %>
    </table>
</div>
