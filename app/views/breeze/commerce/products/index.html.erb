<% content_for :title, "Products" %>
<% pane_layout do |panes| %>
  <% panes.header do %>
    <%= link_to "New product", new_admin_store_product_path, :class => "large new product button" %>
  <% end -%>
  <% panes.inner do %>
    <%= scrollable_layout do %>
      <h2>All Products</h2>
      <%= render :partial => "products", :locals => { :products => @products.paginate(:page => params[:page], :per_page => 10) } %>
    <% end %>
  <% end %>
<% end %>

<%= content_for :left do %>
  <% render :partial => "/breeze/commerce/commerce/left" %>
<% end %>
