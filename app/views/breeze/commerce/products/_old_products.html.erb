<div class="products-container container">
	<%= form_tag breeze.admin_store_products_path, :method => :put do -%>
    <div class="with-selected" style="display: none;">
      <strong>With selected:</strong>
      <%= link_to "Publish", breeze.admin_store_products_path, :class => "small green publish button" %>
      <%= link_to "Unpublish", breeze.admin_store_products_path, :class => "small unpublish button" %>
      <%= link_to "Delete", breeze.admin_store_products_path, :class => "small red delete button" %>
    </div>
    <table class="fancy products">
      <thead>
        <tr>
          <th class="first" style="width:2em;"><input class="checkbox select-all" type="checkbox" /></th>
          <th style="width:15%;">Image</th>
          <th style="">Name</th>
          <th style="width:20%;">Price</th>
          <th style="width:10%;">Last Edited</th>
          <th>Sales over past month</th>
          <th>Active?</th>
          <th class="last" style="width:20%;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if products.any? -%>
	        <%= render :partial => "breeze/commerce/products/product", :collection => products %>
        <% else -%>
	        <tr><td class="empty" colspan="8">There are no products to show here.</td></tr>
        <% end -%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="8"><%#= will_paginate products, :params => { :controller => "breeze/commerce/products", :action => view } %>&nbsp;</td>
        </tr>
      </tfoot>
    </table>
	<% end -%>
</div>

