- content_for :title, "Discounts & Coupons".html_safe

= pane_layout do |pane|
  = pane.inner do
    = scrollable_layout do
      .actions.horizontal
        = link_to "Download CSV file", admin_store_coupon_codes_path(format: :csv), :class => "large button download_csv"
        = link_to "New discount/coupon", new_admin_store_coupon_path, class: "large new green coupon button"
      %h1 Discounts & Coupons
      .box
        .filter_controls
          = select_tag_for_filter("coupons", @filters, params)
          = will_paginate @coupons
          .info
            Current time (last browser refresh):
            = Time.zone.now.to_formatted_s(:rfc822)
        = render partial: "breeze/admin/commerce/coupons/coupons", object: @coupons

- content_for :left do
  = render partial: "breeze/admin/commerce/shared/left"
