<% if @category.errors.empty? %>
  // closeContextualEdit();
  $('#category-details').dialog('close');
  $('#<%= "category_#{@category.id}" %>').replaceWith('<%= escape_javascript render(:partial => "/breeze/admin/commerce/categories/category", :object => @category) %>');
  $('#<%= "category_#{@category.id}" %>').effect("highlight", { color: "#ffffc0" }, 3000);
<% else %>
  $('#category-details').html('<%= escape_javascript render(:file => "/breeze/admin/commerce/categories/edit") %>');
<% end %>
