<div class="relationships-container container">
  <%= link_to "New relationship...", new_admin_store_product_product_relationship_path(@product), :class => "large new relationship button" %>
  <table class="fancy relationships">
    <thead>
      <tr>
        <th class="first"></th>
        <th>Relationship</th>
        <th>Other Product</th>
        <th></th>
        <th class="last" style="">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @product.related_products.any? %>
        <%= render :partial => "breeze/admin/commerce/products/relationship", :collection => @product.product_relationship_children %>
      <% else %>
        <tr><td class="empty" colspan="5">There are no relationships for this product.</td></tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
      </tr>
    </tfoot>
  </table>
</div>


