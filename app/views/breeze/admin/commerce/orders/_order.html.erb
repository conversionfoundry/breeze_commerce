<%= content_tag :tr, :class => :order, :id => "order_#{order.id}", :"data-id" => order.id do %>
  <td class="date">
    <%= order.created_at %>
  </td>
  <td class="products">
    <% order.line_items.each do |item| %>
      <%= item.quantity %>
      <%= item.product.title %>
    <% end %>
  </td>
  <td class="customer">
    <% if order.customer %>
      Returning Customer: 
      <%= order.customer.name %>
    <% else %>
      New Customer    
    <% end %>
    <%= order.billing_address.to_html if order.billing_address  %>
  </td>
  <td class="contact">
    <%= order.customer.phone if order.customer %>
    <%= order.customer.email if order.customer %>
  </td>
  <td class="shipping_address">
     <%= order.shipping_address.to_html if order.shipping_address %>
 </div>
  <td class="amount">
    <%= order.total %>
  </td>
  <td class="actions">
    <p class="order-actions">
      <%= link_to "View", admin_store_order_path(order), :class => "small black view edit button"  %>
      <%= link_to "Edit", edit_admin_store_order_path(order), :class => "small black button" %>
      <%= link_to "Delete", edit_admin_store_order_path(order), :remote => true, :method => :delete, :class => "small red delete button" %>
    </p>
  </td>
<% end %>


