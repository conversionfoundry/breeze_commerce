<%= breeze_form_for @property, :as => :property, :url => url, :remote => true do |form| %>
  <%= render "/breeze/admin/shared/error_messages", :target => @property, :object_name => :property %>
  <%= form.fieldset do %>
    <% unless form.object.new_record?%>
    <% end %>
    <%= form.text_field :name, :required => true %>
  <% end %>
  <%= form.fieldset :legend => "Options", :class => "property-options" do %>
    <%= form.text_field :option_names, :label => false, :value => form.object.options.map{|o| o.name}.join(", "), :hint => "Press <strong>Return</strong> after each new option".html_safe, :wrap => { :class => "option-list" } %>
  <% end %>
<% end %>
