/* Styles used in Breeze Commerce front end */
/* TODO: Should be named commerce_front.css */

/* Typography */
.old_price {
  text-decoration: line-through;
}
.discounted_price {
  color: red;
}

/* Shopping Cart */
.cart-container .form-actions .btn-group {
  float: right;
}
.cart-container table.summary {
  width: 100%;
  margin-bottom: 1em;
}
.cart-container table.summary thead th {
  text-align: left;
}
.cart-container table.summary thead th.total {
  text-align: right;
}
.cart-container table.summary tfoot {
  border-top: solid 1px #d7d7d7;
  border-bottom: solid 1px #d7d7d7;
}
.cart-container table.summary tfoot tr.total td.total {
  font-size: 2em;
}
.cart-container table.summary input[type=text] {
  width: 2em;
  text-align: center;
}

.cart-container table.summary td.total {
  font-weight: bold;
  text-align: right;
}
/* Checkout Funnel */
#checkout-container .form-actions .btn {
  float: right;
}
#checkout-container h1 {
  background-image: url(<%= image_path "breeze/padlock.png" %>);
  background-repeat: no-repeat;
  background-position: 0px 6px;
  padding-left: 26px;
}
div.checkout-header {
  line-height: 40px;
}
div.checkout-header div.heading {
  float: left;
  line-height: 40px;
}
div.checkout-header div.heading div.number {
  background-image: url(<%= image_path "breeze/dark.png" %>);
  background-repeat: no-repeat;
  z-index: 2;
  position: absolute;
  line-height: 40px;
  padding-top: 2px;
}
div.checkout-header.visited div.heading div.number {
  background-image: url(<%= image_path "breeze/disabled.png" %>);
}
div.checkout-header.active div.heading div.number {
  background-image: url(<%= image_path "breeze/active.png" %>);
}
div.checkout-header div.heading div.step, div.detail div.step {
  width: 585px;
  line-height: 28px;
  overflow: auto;
  margin-top: 5px;
}
div.checkout-header div.heading div.step {
  margin-left: 20px;
}
div.checkout-header div.heading div.step span {
  margin-left: 70px;
  font-size: 130%;
  color: #686868;
}
div.checkout-header div.heading div.number span {
  color: #fff;
  margin-top: 5px;
  padding-left:16px;
  padding-right: 15px;
  font-size: 120%;
}
div.checkout-header>span {
  float: left;
  width: 50px;
  color: #d7d7d7;
  font-size: 150%;
}
div.checkout-header.active > span {
  color: #8cc63f;
}
div.checkout-header, div.checkout-body {
  overflow: auto;
  width: 100%;
}
div.checkout-summary {
  overflow: auto;
  width: 100%;
  color: #9f9f9f;
  font-weight: bold;
}
div.checkout-summary div.summary {
  float: left;
  margin-left: 70px;
}
div.summary-item {
  float:left;
  margin-top: 10px;
  margin-bottom: 10px;
}
div.summary-item span {
  display: block;
  width: 140px;
}


/* Thank You Page */
div.detail div.step span {
  font-size: 130%;
  margin-left: 20px;
}




/* Other */
span.currency {
  font-size:80%;
}
fieldset ol {
  margin: 0;
  padding: 0;
  float: left;
}
fieldset li {
  list-style: none;
  padding: 0;
  margin: 0;
}
li.state-postcode label {
  width: 80px;
}
li.state-postcode input[type=text] {
  width: 30px !important;
}
ol.form input[type=text], ol.form input[type=password] {
  background-image: url(<%= image_path "breeze/form_bg.jpg" %>);
  background-repeat: repeat-x;
  border: 1px solid #d7d7d7;
  padding: 3px;
}

ol.form input[type=text].error {
  border: 1px solid #8cc63f;
  background-color: #f2fbe6;
  background-image: none;
}
ol.form abbr {
  font-size: 200%;
  font-weight: bold;
  color: #8cc63f;
  margin-left: -234px;
  line-height: 0.2em;
  vertical-align: bottom;
  border: none;
}
ol.form li.state-postcode abbr {
  margin-left: -80px;
}
.first_name,
.last_name {
  float: left;
  margin-right: 1em;
}
